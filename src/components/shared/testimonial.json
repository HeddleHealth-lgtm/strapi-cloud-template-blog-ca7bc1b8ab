{
  "collectionName": "components_shared_testimonials",
  "info": {
    "displayName": "testimonial",
    "icon": "message"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "quoteText_EN": {
      "type": "text",
      "required": true
    },
    "quoteText_ES": {
      "type": "text"
    },
    "author": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "age": {
      "type": "string",
      "required": false
    },
    "color": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    }
  },
  "config": {}
}
